{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}/Dependencies/GLEW/include",
                "-I${workspaceFolder}/Dependencies/GLFW/include",
                "-L${workspaceFolder}/Dependencies/GLEW/lib/Release/Win32",
                "-L${workspaceFolder}/Dependencies/GLFW/lib-vc2022",
                "${file}",
                "-lglfw3", "-lglew32s", "-lopengl32", "-lGdi32", "-lUser32", "-lShell32",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}